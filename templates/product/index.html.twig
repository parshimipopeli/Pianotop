{% extends "layouts/base.html.twig" %}

{% block title "Nos produits" %}
{% block body %}
	<h1 class="text-center">
		Nos produits
	</h1>

	<div class="container">
		<div class="row mt-5">
			{% for product in products%}
				<div class="col-md-4">
					<div class="product-item">
						<img src="/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">

						<h5 class="text-center text-capitalize">
							{{ product.name }}
						</h5>
						<span class="text-center">
							{{ product.subtitle }}
						</span>
					</div>

				</div>


			{% endfor %}
		</div>
	</div>


{% endblock %}
